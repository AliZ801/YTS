@model YTS.Models.ViewModels.AdminVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var title = "Add New Genre";

    if (Model.Genres.Id != 0)
    {
        ViewData["Title"] = "Update Genre";
    }
    else
    {
        ViewData["Title"] = "Add New Genre";
    }
}

<div class="container">
    <div class="col-4 m-0 m-auto border rounded bg-light">
        <form method="post" asp-action="AddGenre" class="col-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (Model.Genres.Id != 0)
            {
                <input type="hidden" asp-for="@Model.Genres.Id" />
                title = "Update Genre";
            }

            <div class="row">
                <h3 class="pt-2">@title</h3>
            </div>

            <hr />

            <div class="row form-group">
                <label asp-for="@Model.Genres.Genre"></label>
                <input asp-for="@Model.Genres.Genre" class="form-control" />
                <span asp-validation-for="@Model.Genres.Genre" class="text-danger"></span>
            </div>

            <div class="row form-group">
                @if (Model.Genres.Id != 0)
                {
                    <partial name="_EditAndBackBtn" model="@Model.Genres.Id" />
                }
                else
                {
                    <partial name="_CreateAndBackBtn" />
                }
            </div>

        </form>
    </div>
</div>