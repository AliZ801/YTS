@{
    ViewData["Title"] = "Quality List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="rounded bg-light" style="border: 4px solid green">
    <div class="row p-1">
        <div class="col-6">
            <h3 class="pl-1">Quality List</h3>
        </div>
        <div class="col-6 text-right">
            <a asp-action="AddQuality" class="btn btn-success text-white">
                <i class="fas fa-plus"></i> &nbsp; New Quality
            </a>
        </div>
    </div>
    <br />
    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr class="text-center">
                <th>Sr. No.</th>
                <th>Quality</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/quality.js"></script>

}