@model YTS.Models.ViewModels.AdminVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var title = "Add New Quality";

    if(Model.Quality.Id != 0)
    {
        ViewData["Title"] = "Update Quality";
    }
    else
    {
        ViewData["Title"] = "Add New Quality";
    }
}

<div class="container">
    <div class="col-5 m-0 m-auto rounded bg-light" style="border: 4px solid green">
        <form method="post" asp-action="AddQuality" class="col-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if(Model.Quality.Id != 0)
            {
                <input type="hidden" asp-for="@Model.Quality.Id" />
                title = "Update Quality";
            }

            <div class="row justify-content-around">
                <h3 class="pt-2">@title</h3>
            </div>

            <hr style="border-color: black" />

            <div class="row form-group">
                <label>Quality</label>
                <input asp-for="@Model.Quality.Qual" class="form-control" />
                <span asp-validation-for="@Model.Quality.Qual" class="text-danger"></span>
            </div>

            <div class="row form-group">
                @if (Model.Quality.Id != 0)
                {
                    <partial name="_EditAndBackBtn" model="@Model.Quality.Id" />
                }
                else
                {
                    <partial name="_CreateAndBackBtn" />
                }
            </div>

        </form>
    </div>
</div>