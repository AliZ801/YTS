@{
    ViewData["Title"] = "Movies List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border rounded">
    <div class="row p-1">
        <div class="col-6">
            <h3 class="pl-1">Movies List</h3>
        </div>
        <div class="col-6 text-right">
            <a asp-action="AddMovie" class="btn btn-primary text-right">
                <i class="fas fa-plus"></i> &nbsp; New Movie
            </a>
        </div>
    </div>
    <br />
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr class="text-center">
                <th>Sr. No.</th>
                <th>Title</th>
                <th>Genre</th>
                <th>Quality</th>
                <th>Rating</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{ 
    <script src="~/js/movies.js"></script>
}