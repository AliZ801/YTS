@{
    ViewData["Title"] = "Ratings List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border rounded">
    <div class="row p-1">
        <div class="col-6">
            <h3 class="pl-1">Ratings List</h3>
        </div>
        <div class="col-6 text-right">
            <a asp-action="AddRating" class="btn btn-primary text-white">
                <i class="fas fa-plus"></i> &nbsp; New Rating
            </a>
        </div>
    </div>
    <br />
    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr class="text-center">
                <th>Sr. No.</th>
                <th>Rating</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/ratings.js"></script>

}